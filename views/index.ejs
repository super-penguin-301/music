<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top ">
        <%- include('./layout/header') %>
    </header>
    <!-- End Header -->

    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center justify-content-center">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
                <div class="col-xl-6 col-lg-8">
                    <h1>It’s Not Just A Music. &nbsp; It’s The Universal Language<span>.</span></h1>
                    <h2>With Musicly</h2>
                </div>
            </div>

            <div class="row gy-4 mt-5 justify-content-center" data-aos="zoom-in" data-aos-delay="250">
                <div class="col-xl-2 col-md-4">
                    <a class='nav-link scrollto' href="#artists">
                        <div class="icon-box">
                            <i class="fas fa-microphone"></i>
                            <h3>Top Artists</h3>
                        </div>
                    </a>
                </div>
                <div class="col-xl-2 col-md-4">
                    <a class='nav-link scrollto' href="#topten">
                        <div class="icon-box">
                            <i class="fas fa-drum"></i>
                            <h3>Top Tracks</h3>
                            <!-- use template for songs-->
                        </div>
                    </a>
                </div>
                <div class="col-xl-2 col-md-4">
                    <a class='nav-link scrollto' href="#albums">
                        <div class="icon-box">
                            <i class="fas fa-compact-disc"></i>
                            <h3>Top Albums</h3>
                        </div>
                    </a>
                </div>
                <div class="col-xl-2 col-md-4">
                    <a class='nav-link scrollto' href="#playlists">
                        <div class="icon-box">
                            <i class="fas fa-music"></i>
                            <h3>Top playlists</h3>
                        </div>
                    </a>
                </div>
                <!-- <div class="col-xl-2 col-md-4">
                    <a class='nav-link scrollto' href="#team">
                        <div class="icon-box">
                            <i class="ri-database-2-line"></i>
                            <h3>Our Team</h3>
                        </div>
                    </a>
                </div> -->
            </div>

        </div>


    </section>
    <!-- End Hero -->

    <main id="main">
        <!-- ======= Features Section ======= -->
        <section id="features" class="services">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>OUR</h2>
                    <p>Features</p>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                        <div class="icon-box">
                            <div class="icon"><i class="bx bxl-dribbble"></i></div>
                            <h4><a href="">Sport</a></h4>
                            <p>Enjoy with free & unlimitted number of songs during your hard exercises</p>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                        <div class="icon-box">
                            <div class="icon"><i class="bx bx-world"></i></div>
                            <h4><a href="">WhereEver</a></h4>
                            <p>Enjoy by listening to your favorite music anywhere and anytime you are in</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                        <div class="icon-box">
                            <div class="icon"><i class="bx bx-slideshow"></i></div>
                            <h4><a href="">Hight Quality</a></h4>
                            <p>Our tracks came with high quality and clear voice to give you a comfort</p>
                        </div>
                    </div>


                </div>

            </div>
        </section>
        <!-- End Features Section -->

        <!-- ======= Clients Section ======= -->
        <section id="clients" class="clients">
            <div class="container" data-aos="zoom-in">

                <div class="clients-slider swiper-container">
                    <div class="swiper-wrapper align-items-center">
                        <div class="swiper-slide"><img src="assets/img/clients/client-1.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-2.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-3.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-4.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-5.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-6.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-7.png" class="img-fluid" alt=""></div>
                        <div class="swiper-slide"><img src="assets/img/clients/client-8.png" class="img-fluid" alt=""></div>
                    </div>

                </div>
        </section>
        <!-- End Clients Section -->

        <!-- ======= T10 Artists Section ======= -->

        <section id="artists" class="portfolio">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Top Ten</h2>
                    <p>Trending Artists</p>
                </div>


                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">

                    <% datas.artists.data.forEach( x => {%>
                        <div class="col-lg-3 col-md-6 portfolio-item filter-app">
                            <div class="portfolio-wrap">
                                <img src="<%= x.picture_big%>" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>
                                        <%= x.name%>
                                    </h4>

                                    <div class="portfolio-links">
                                        <a target="_blank" href="<%= x.link%>" title="More Tracks For the Artist"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% })%>
                </div>

            </div>
        </section>

        <!-- End T10 Artists Section -->

        <!-- ======= topten tracks Section ======= -->
        <section id="topten" class="portfolio">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Top Ten</h2>
                    <p>Trending Tracks</p>
                </div>


                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">

                    <% datas.tracks.data.forEach( x => {%>
                        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                            <div class="portfolio-wrap">
                                <img src="<%= x.album.cover_big%>" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>
                                        <%= x.title_short%>
                                    </h4>
                                    <p>
                                        <%= x.artist.name%>
                                    </p>
                                    <div class="portfolio-links">
                                        <audio src="<%= x.preview%>" controls></audio>
                                        <!-- <a href="assets/img/portfolio/portfolio-1.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox" title="App 1"><i class="bx bx-plus"></i></a> -->
                                        <a target="_blank" href="<%= x.link%>" title="Listen to full track"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% })%>

                </div>

            </div>
        </section>
        <!-- End T10 tracks Section -->







        <!-- ======= T10 Albums Section ======= -->
        <section id="albums" class="portfolio">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Top Ten</h2>
                    <p>Trending Album</p>
                </div>


                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">

                    <% datas.albums.data.forEach( x => {%>
                        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                            <div class="portfolio-wrap">
                                <img src="<%= x.cover_big%>" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>
                                        <%= x.title%>
                                    </h4>
                                    <p>
                                        <%= x.artist.name%>
                                    </p>
                                    <div class="portfolio-links">
                                        <a target="_blank" href="<%= x.link%>" title="All Album's tracks"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% })%>
                </div>

            </div>
        </section>
        <!-- End T10 Albums Section -->



        <!-- ======= T10 playlist Section ======= -->

        <section id="playlists" class="portfolio">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Top Ten</h2>
                    <p>Trending Playlists</p>
                </div>


                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">

                    <% datas.playlists.data.forEach( x => {%>
                        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                            <div class="portfolio-wrap">
                                <img src="<%= x.picture_big%>" class="img-fluid" alt="">
                                <div class="portfolio-info">
                                    <h4>
                                        <%= x.title%>
                                    </h4>
                                    <p>Made By:
                                        <%= x.user.name%>
                                    </p>
                                    <p>
                                        <%= x.creation_date%>
                                    </p>
                                    <div class="portfolio-links">
                                        <a target="_blank" href="<%= x.link%>" title="All playlist's tracks"><i class="bx bx-link"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% })%>
                </div>

               

    </main>
    <!-- End #main -->

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <%- include('./layout/footer') %>
    </footer>
    <!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

