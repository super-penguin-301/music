<!DOCTYPE html>
<html lang="en">

<head>

    <title>Musicly</title>


    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <!-- <link href="style/index.css" rel="stylesheet"> -->
    <link href="style/search.css" rel="stylesheet">


    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&display=swap" rel="stylesheet">
</head>

<body>
    <!-- id="header" -->
   <header class="fixed-top ">
    <%- include('./layout/header') %>
    </header>

    <!-- ----------------newsearch----------------------- -->
    <br><br><br><br><br><br><br>
    <h1 class="ml2" style="text-align: center; font-family: 'Berkshire Swash', cursive;"> <i class="fas fa-music"></i> ...Listen and have fun</h1>
    <br><br><br><br>
    <main id="main">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
            integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <form style="background-color:#fff;border: black solid;" action="/search" method="POST">
            <input type="text" name="search" id="search" placeholder="search by song, artist and album.">

            <button style="background-color: transparent;border: none;" type="submit"><i style="color: #0c0c0b;" class="fas fa-search"></i></button>
        </form>


        <% if(ongs){ %>
    
                <section id="topten" class="portfolio">
                    <div class="container" data-aos="fade-up">
                        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
        
                            <% mySongs.forEach(x=> { %>

                                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                                    <div class="portfolio-wrap">
                                        <img src="<%= x.album.cover_big%>" class="img-fluid" alt="">
                                        <div class="portfolio-info">
                                            <h4>
                                                <%= x.title_short%>
                                            </h4>
                                            <p>
                                                <%= x.artist.name%>
                                            </p>
                                            <div class="portfolio-links">
                                                <audio src="<%= x.preview%>" controls></audio>
                                                <!-- <a href="assets/img/portfolio/portfolio-1.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox" title="App 1"><i class="bx bx-plus"></i></a> -->
                                                <a target="_blank" href="<%= x.link%>" title="Listen to full track"><i class="bx bx-link"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% })%>
        
                        </div>
        
                    </div>
                </section>
             
                <% } %>




<!-- ////////////////////////////////////////////////////// -->
 


    </main><!-- End #main -->
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <%- include('./layout/footer') %>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="assets/vendor/purecounter/purecounter.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="js/search.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="assets/js/main.js"></script>


</body>

</html>